<html>
<body class="body">
  <div class="header">
    <a href=#><%= image_tag("nlogo.svg", :style => "height: 35px; margin-top: 30px; float:left; margin-left: 18%;") %></a>
    <span style="margin-top: 35px; font-size: 18px; float: right; margin-right: 18%;">Are you a healthcare professional? <a href=#><b>Sign up here →</b></a></span>
  </div>
  <div class="header searchnav">
    <input type="text" class="input" placeholder="Nutricionista Desportivo" style="margin-left: 18%">&nbsp
     <div id="grouping">
      <input type="text" class="input input_with_button" placeholder="Porto">
      <button href=# class="input_button" title="Usar localização atual"></button>
    </div>&nbsp
    <button class="search_button" name="search">Pesquisar</button>
  </div>
  <div class="container">
    <div class="results">
      <% @result = Professional.first %>
        <%= @result.name %>
        <%= @result.job_description %>
        <%= @result.pro_id %>
        <%= @result.office %>
        <%= @result.address %>
        <%= @result.city %>
        <%= @result.appointment %>
        <%= @result.price %>
        <%= image_tag(@result.photo, :style => "width: 100px; border-radius:50%") %>
    </div>
  </div>
<footer class="footer">
  <div class="pagination">
<% (1..10).each do |page| %>
<a href="#" class="<%= 'active' if page==1 %>"><%= "#{page}" %></a>
<% end %>
<a href="#">></a>
</div>
</footer>
</body>
</html>
